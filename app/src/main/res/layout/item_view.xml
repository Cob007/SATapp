<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="model"
            type="com.nycschools.app.model.ApiResponse" />
    </data>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        app:cardElevation="2dp"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="#f7f7f7">
        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/layout"
            android:background="#f7f7f7"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:padding="8dp"

            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ImageView
                    android:id="@+id/iv_school"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_school"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/theme_700"
                    android:text="@{model.schoolName}"
                    android:textSize="12sp"
                    fontPath="fonts/OpenSans-Bold.ttf"
                    tools:text="title"
                    android:lines="1"
                    android:ellipsize="end"
                    android:padding="5dp"
                    app:layout_constraintLeft_toRightOf="@id/iv_school"
                    app:layout_constraintTop_toTopOf="parent"
                    />
            </LinearLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                >
                <ImageView
                    android:id="@+id/iv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_address"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/theme_700"
                    android:text="@{model.websiteUrl}"
                    android:textSize="12sp"
                    fontPath="fonts/OpenSans-Bold.ttf"
                    tools:text="website"
                    android:lines="1"
                    android:ellipsize="end"
                    android:padding="5dp"
                    app:layout_constraintLeft_toRightOf="@id/iv_address"
                    app:layout_constraintTop_toTopOf="parent"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="3"
                android:ellipsize="end"
                android:text="@{model.overviewParagraph}"
                android:textSize="12sp"
                android:padding="4dp"
                tools:text="overview"
                android:textColor="@color/theme_700"
                fontPath="fonts/OpenSans-Light.ttf"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</layout>
